        </ComboBox>
        <Button Content="Posticipa" Margin="10,0,5,10" VerticalAlignment="Bottom" Height="45" FontWeight="Bold" Click="Button_Click_2"/>
        <Button Content="Esci e non chiere più" Margin="5,0,10,10" VerticalAlignment="Bottom" Height="45" FontWeight="Bold" Grid.Column="1" Click="Button_Click_1"/>
        <Label Content="oppure" HorizontalAlignment="Center" Margin="0,0,0,28" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

